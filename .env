# Kafka connection
# KAFKA_CONTAINER: Kafka running container name. Leave empty if using local CLI tools.
KAFKA_CONTAINER=
# KAFKA_BROKER: bootstrap server in host:port form.
KAFKA_BROKER=

# Topics
# SNAPSHOT_TOPIC: full sync output topic (dual mode).
SNAPSHOT_TOPIC=pika.snapshot
# BINLOG_TOPIC: incremental binlog output topic (dual mode).
BINLOG_TOPIC=pika.binlog
# SINGLE_TOPIC: single stream output topic (single mode).
SINGLE_TOPIC=pika.stream
# OFFSETS_TOPIC: compacted topic used to store checkpoints.
OFFSETS_TOPIC=__pika_port_kafka_offsets

# Local paths
# CHECKPOINT_PATH: local checkpoint file path for pika_port.
CHECKPOINT_PATH=
# LOG_DIR: local log directory for pika_port.
LOG_DIR=
# RSYNC_DIR: local rsync dump directory for pika_port.
RSYNC_DIR=
# PIKA_PORT_MATCH: pgrep match string for running pika_port (optional).
PIKA_PORT_MATCH=

# Topic settings
# PARTITIONS_*: topic partition count.
PARTITIONS_SNAPSHOT=3
PARTITIONS_BINLOG=3
PARTITIONS_SINGLE=3
# PARTITIONS_OFFSETS: offsets topic partition count (recommended 1).
PARTITIONS_OFFSETS=1
# REPLICATION_FACTOR: topic replication factor.
REPLICATION_FACTOR=1
